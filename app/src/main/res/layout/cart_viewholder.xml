<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:layout_marginBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/imgContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:background="@drawable/edittext_white_bg"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/orange"

            />
    </LinearLayout>
    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgContainer"
        app:layout_constraintTop_toTopOf="@id/imgContainer"
        />
    <TextView
        android:id="@+id/txtProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000đ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_500"
        app:layout_constraintStart_toStartOf="@id/txtProductName"
        app:layout_constraintTop_toBottomOf="@id/txtProductName"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/primary_500"
        android:text="/kg"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/txtProductPrice"
        app:layout_constraintTop_toTopOf="@id/txtProductPrice"
        />
    <TextView
        android:id="@+id/txtTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000đ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/imgContainer"
        app:layout_constraintStart_toStartOf="@id/txtProductName"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imgContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edittext_white_bg"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btnDecrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_primary"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="1"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/txtUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="kg"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:id="@+id/btnIncrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="@drawable/btn_primary"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>