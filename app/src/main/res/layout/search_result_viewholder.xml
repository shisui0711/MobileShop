<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_secondary_selected"
    android:layout_marginBottom="12dp"
    android:padding="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/imgContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:background="@drawable/edittext_white_bg"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/orange"

            />
    </LinearLayout>
    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgContainer"
        app:layout_constraintTop_toTopOf="@id/imgContainer"
        />
    <TextView
        android:id="@+id/txtProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000đ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_500"
        app:layout_constraintStart_toStartOf="@id/txtProductName"
        app:layout_constraintTop_toBottomOf="@id/txtProductName"
        />

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:textColor="@color/primary_500"
        android:textStyle="bold"
        android:text="/"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/txtProductPrice"
        app:layout_constraintTop_toTopOf="@id/txtProductPrice"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_500"
        app:layout_constraintStart_toEndOf="@id/slash"
        app:layout_constraintTop_toTopOf="@id/slash"
        />
</androidx.constraintlayout.widget.ConstraintLayout>